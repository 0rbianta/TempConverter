<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:fontFamily="monospace"
        android:padding="5sp"
        android:background="#000"
        android:textSize="14sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TempConverter // 0rbianta basics" />


    <androidx.constraintlayout.widget.ConstraintLayout

        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <androidx.cardview.widget.CardView
                    android:id="@+id/fahrenheit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300sp"
                        android:layout_gravity="center"
                        android:layout_margin="20sp"
                        android:background="@drawable/card_bg"
                        android:orientation="vertical"
                        android:padding="20sp">

                        <TextView
                            android:layout_margin="5sp"
                            android:textStyle="italic"
                            android:textColor="#fff"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fahrenheit Menu" />

                        <EditText
                            android:id="@+id/fetxt_usr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/etxt_usr_bg"
                            android:ems="10"
                            android:hint="value"
                            android:inputType="numberSigned"
                            android:padding="4sp"
                            android:textColor="#000"
                            android:textSize="30sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20sp"
                            android:text="Convert to:"
                            android:textColor="#fff"
                            android:textSize="20sp" />

                        <RadioGroup
                            android:id="@+id/ftemp_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checkedButton="@id/i1">

                            <RadioButton
                                android:id="@+id/i1"
                                android:layout_width="match_parent"
                                android:layout_height="30sp"
                                android:layout_gravity="center_horizontal"
                                android:checked="false"
                                android:text="Kelvin"
                                android:textColor="#fff"
                                android:textSize="14sp" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="30sp"
                                android:layout_gravity="center_horizontal"
                                android:checked="false"
                                android:text="Celsius"
                                android:textColor="#fff"
                                android:textSize="14sp" />


                        </RadioGroup>

                        <TextView
                            android:id="@+id/foutput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:padding="10sp"
                            android:textColor="#fff"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/frun_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:text="Convert" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/kelvin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300sp"
                        android:layout_gravity="center"
                        android:layout_margin="20sp"
                        android:background="@drawable/card_bg"
                        android:orientation="vertical"
                        android:padding="20sp">

                        <TextView
                            android:layout_margin="5sp"
                            android:textStyle="italic"
                            android:textColor="#fff"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kelvin Menu" />

                        <EditText
                            android:id="@+id/ketxt_usr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/etxt_usr_bg"
                            android:ems="10"
                            android:hint="value"
                            android:inputType="numberSigned"
                            android:padding="4sp"
                            android:textColor="#000"
                            android:textSize="30sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20sp"
                            android:text="Convert to:"
                            android:textColor="#fff"
                            android:textSize="20sp" />

                        <RadioGroup
                            android:id="@+id/ktemp_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checkedButton="@id/i2">

                            <RadioButton
                                android:id="@+id/i2"
                                android:layout_width="match_parent"
                                android:layout_height="30sp"
                                android:layout_gravity="center_horizontal"
                                android:checked="false"
                                android:text="Fahrenheit"
                                android:textColor="#fff"
                                android:textSize="14sp" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="30sp"
                                android:layout_gravity="center_horizontal"
                                android:checked="false"
                                android:text="Celsius"
                                android:textColor="#fff"
                                android:textSize="14sp" />


                        </RadioGroup>

                        <TextView
                            android:id="@+id/koutput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:padding="10sp"
                            android:textColor="#fff"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/krun_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:text="Convert" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/celsius"
                    app:cardBackgroundColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300sp"
                        android:layout_gravity="center"
                        android:layout_margin="20sp"
                        android:background="@drawable/card_bg"
                        android:orientation="vertical"
                        android:padding="20sp">

                        <TextView
                            android:layout_margin="5sp"
                            android:textStyle="italic"
                            android:textColor="#fff"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Celsius Menu" />

                        <EditText
                            android:id="@+id/cetxt_usr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/etxt_usr_bg"
                            android:ems="10"
                            android:hint="value"
                            android:inputType="numberSigned"
                            android:padding="4sp"
                            android:textColor="#000"
                            android:textSize="30sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20sp"
                            android:text="Convert to:"
                            android:textColor="#fff"
                            android:textSize="20sp" />

                        <RadioGroup
                            android:checkedButton="@id/i"
                            android:id="@+id/ctemp_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/i"
                                android:layout_width="match_parent"
                                android:layout_height="30sp"
                                android:layout_gravity="center_horizontal"
                                android:checked="false"
                                android:text="Kelvin"
                                android:textColor="#fff"
                                android:textSize="14sp" />

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="30sp"
                                android:layout_gravity="center_horizontal"
                                android:checked="false"
                                android:text="Fahrenheit"
                                android:textColor="#fff"
                                android:textSize="14sp" />


                        </RadioGroup>

                        <TextView
                            android:id="@+id/coutput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:padding="10sp"
                            android:textColor="#fff"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/crun_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:text="Convert" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>



        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:onClick="fahrenheit_clicked"
                    android:layout_width="120sp"
                    android:layout_height="50sp"
                    android:layout_margin="10sp"
                    android:background="@drawable/option_btn_custom"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Fahrenheit"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <Button
                    android:onClick="kelvin_clicked"
                    android:layout_width="120sp"
                    android:layout_height="50sp"
                    android:layout_margin="10sp"
                    android:background="@drawable/option_btn_custom"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Kelvin"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <Button
                    android:onClick="celsius_clicked"
                    android:layout_width="120sp"
                    android:layout_height="50sp"
                    android:layout_margin="10sp"
                    android:background="@drawable/option_btn_custom"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Celsius"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>





</LinearLayout>